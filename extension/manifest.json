{
  "name": "JSON Formatter",
  "version": "0.6.2",
  "manifest_version": 2,
  "description": "Makes JSON easy to read. Open source.",
  "homepage_url": "https://github.com/callumlocke/json-formatter",
  "minimum_chrome_version": "21",
  "icons": {
    "128": "28.png",
    "32": "32.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["*://*/*", "<all_urls>"]
}
